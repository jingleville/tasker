<h4>New Project</h4>
<%= form_with model: [@group, @procedure, @project] do |form| %>
  <% if @project.errors.full_messages.any? %>
    <ul>
    <% @project.errors.full_messages.each do |error_message| %>
      <li>
      <%= error_message%> 
      </li>
    <% end %>
    </ul>
  <% end %>


  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @project.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
      <%= form.submit %>
  </div>
<% end %>